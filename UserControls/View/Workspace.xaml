<UserControl x:Class="CodingAssistantBox.UserControls.View.Workspace"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CodingAssistantBox.UserControls.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="DarkSlateBlue">
        <!-- Workspace -->
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition />
        </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Workspace" Foreground="White" 
               Height="20" VerticalAlignment="Top" Panel.ZIndex="1" HorizontalAlignment="Stretch"/>
            <Button x:Name="fileBrowserBtn" Grid.Row="1" Content="Browse" Width="50" HorizontalAlignment="Center"  Click="fileBrowserBtn_Click"/>
            <ListView x:Name="dirSummary" Grid.Row="2" Background="DarkSlateBlue" Foreground="White" 
                      ItemsSource="{Binding WorkspaceFiles}" />
    </Grid>
</UserControl>
