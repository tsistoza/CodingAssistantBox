<Window x:Class="CodingAssistantBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodingAssistantBox"
        mc:Ignorable="d"
        Title="CodingAssistantBox" Height="450" Width="800"
        >
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Chat" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30" Foreground="White"/>

        <ScrollViewer x:Name="ScrollDialog" Grid.Row="1" VerticalScrollBarVisibility="Auto" >
            <StackPanel x:Name="DialogPanel" />
        </ScrollViewer>
        <Button x:Name="clearDialog" Width="20" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" 
                Content="X" Grid.Row="1" Background="Red" Click="clearDialog_Click"/>

        <TextBlock x:Name="userPlaceholdler" Text="Model Connecting..." Margin="30,30,30,30" Grid.Row="2" 
                   Foreground="LightGray" Panel.ZIndex="-1"/>
        <TextBox x:Name="userInput" Margin="20,20,20,20" Grid.Row="2" Foreground="White" Background="Transparent" 
                 TextChanged="userInput_TextChanged" CaretBrush="White" PreviewKeyDown="userInput_PreviewKeyDown"/>
        
        <Menu Grid.Row="2" Height="15" Background="Transparent" Foreground="White"
              VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20, 5">
            <MenuItem Header="Model:" x:Name="ModelSelector"></MenuItem>
            <MenuItem Header="Connecting..." x:Name="NameModel" />
        </Menu>
        
    </Grid>
</Window>
