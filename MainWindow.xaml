<Window x:Class="CodingAssistantBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodingAssistantBox"
        xmlns:view="clr-namespace:CodingAssistantBox.UserControls.View"
        mc:Ignorable="d"
        Title="CodingAssistantBox" Height="450" Width="800"
        >
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*" />
            <ColumnDefinition Width="85*" />
        </Grid.ColumnDefinitions>

        <!-- Top Row -->
        <TextBlock Text="Chat" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30" Foreground="White"/>

        <!-- Middle Row -->
        <ScrollViewer Grid.Column="1" x:Name="ScrollDialog" VerticalScrollBarVisibility="Auto" Grid.ColumnSpan="2" Margin="0,65,0,0" Grid.RowSpan="2" >
            <StackPanel x:Name="DialogPanel" />
        </ScrollViewer>
        <Button x:Name="clearDialog" Grid.Column="2" Width="20" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" 
                Content="X" Background="Red" Click="clearDialog_Click" Margin="0,65,0,0" Grid.RowSpan="2"/>

        <!-- Bottom Row -->
        <Grid Grid.Row="2" Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60*"/>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="20*"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="userPlaceholdler" Text="Model Connecting..." Margin="20, 10, 10, 10" VerticalAlignment="Center"
                           Foreground="LightGray" Panel.ZIndex="-1" />
                <TextBox x:Name="userInput" Margin="10,0,10,0" Foreground="White" Background="Transparent"
                         TextChanged="userInput_TextChanged" CaretBrush="White" PreviewKeyDown="userInput_PreviewKeyDown"/>

                <Grid Grid.Row="1" Margin="10, 0, 10, 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Border Background="DarkSlateBlue" />
                    <StackPanel Orientation="Horizontal">
                        <Menu Background="Transparent" Foreground="White" >
                            <MenuItem Header="Add Context+" Click="contextAdder_Click"/>
                        </Menu>
                        <Menu Background="Transparent" Foreground="White" ItemsSource="{Binding ContextFiles}">
                            <Menu.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}"/>
                                        <Button Content="X" Background="Transparent" Foreground="White" Click="contextDelete_Click" />
                                    </StackPanel>
                                </DataTemplate>
                            </Menu.ItemTemplate>
                        </Menu>
                    </StackPanel>
                </Grid>

                <Menu Grid.Row="2" Background="Transparent" Foreground="White"
                      VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,5" Grid.ColumnSpan="2">
                    <MenuItem Header="Model:" x:Name="ModelSelector"></MenuItem>
                    <MenuItem Header="Connecting..." x:Name="NameModel" />
                </Menu>
            </Grid>
        </Grid>
        
        

        <!-- Workspace -->
        <view:Workspace Grid.RowSpan="3" />
    </Grid>
</Window>
