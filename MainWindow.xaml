<Window x:Class="CodingAssistantBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodingAssistantBox"
        xmlns:view="clr-namespace:CodingAssistantBox.UserControls.View"
        mc:Ignorable="d"
        Title="CodingAssistantBox" Height="450" Width="800"
        >
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*" />
            <ColumnDefinition Width="71*" />
            <ColumnDefinition Width="289*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Row -->
        <TextBlock Text="Chat" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="30" Foreground="White" Margin="188,0,0,0"/>

        <!-- Middle Row -->
        <ScrollViewer Grid.Column="1" x:Name="ScrollDialog" VerticalScrollBarVisibility="Auto" Grid.ColumnSpan="2" Margin="0,65,0,0" Grid.RowSpan="2" >
            <StackPanel x:Name="DialogPanel" />
        </ScrollViewer>
        <Button x:Name="clearDialog" Grid.Column="2" Width="20" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" 
                Content="X" Background="Red" Click="clearDialog_Click" Margin="0,65,0,0" Grid.RowSpan="2"/>

        <!-- Bottom Row -->
        <TextBlock Grid.Column="1" x:Name="userPlaceholdler" Text="Model Connecting..." Margin="30,30,30,30" Grid.Row="2" 
                   Foreground="LightGray" Panel.ZIndex="-1" Grid.ColumnSpan="2"/>
        <TextBox Grid.Column="1" x:Name="userInput" Margin="20,20,20,20" Grid.Row="2" Foreground="White" Background="Transparent" 
                 TextChanged="userInput_TextChanged" CaretBrush="White" PreviewKeyDown="userInput_PreviewKeyDown" Grid.ColumnSpan="2"/>

        <Menu Grid.Row="2" Grid.Column="1" Height="15" Background="Transparent" Foreground="White"
              VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20,0,0,5" Grid.ColumnSpan="2">
            <MenuItem Header="Model:" x:Name="ModelSelector"></MenuItem>
            <MenuItem Header="Connecting..." x:Name="NameModel" />
        </Menu>

        <!-- Workspace -->
        <view:Workspace Grid.RowSpan="3" />
    </Grid>
</Window>
