<Window x:Class="CodingAssistantBox.Windows.Variables.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodingAssistantBox.Windows.Variables"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800">
    <Grid Background="DarkSlateGray">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="20,20,20,20" HorizontalAlignment="Center">
            <StackPanel>
                
                <!-- Template Guide For Adding Settings-->
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Text="ChatHistory Length: " Margin="0, 0, 20, 0" Foreground="White" FontSize="20" />
                    <TextBlock VerticalAlignment="Center" Text="{Binding ChatHistoryNum}" Margin="0, 0, 20, 0" Foreground="White" FontSize="20" />
                    <Button x:Name="IncreaseChat" VerticalAlignment="Center" Height="20" Background="Transparent" Click="IncreaseChat_Click">
                        <Image Source="/Windows/Variables/UpArrow.png"/>
                    </Button>
                    <Button x:Name="DecreaseChat" VerticalAlignment="Center" Height="20" Background="Transparent" Click="DecreaseChat_Click">
                        <Image Source="/Windows/Variables/DownArrow.png" />
                    </Button>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="(A ChatHistory is User Prompt + Response.), LLM will read your past ChatHistory up to 10" Foreground="LightGray" FontSize="10"/>
                </StackPanel>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
